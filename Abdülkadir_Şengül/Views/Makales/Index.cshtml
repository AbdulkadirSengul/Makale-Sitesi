    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YayinTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Özet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dergi.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endeks.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MakaleTur.Ad)
            </td>
        </tr>
    }

</table>